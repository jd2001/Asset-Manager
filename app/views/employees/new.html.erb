<%= form_for @employee do |f| %>
  <%= f.label :first_name, "First Name:" %>
  <%= f.text_field :first_name %> <br>
  <%= f.label :surname, "Surname:" %>
  <%= f.text_field :surname %> <br>
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %> <br>
  <%= f.label :phone_number, "Phone Numer:" %>
  <%= f.text_field :phone_number %> <br>
  <%= f.label :company, "Company:" %>
  <%= f.collection_select :company_id, Company.all, :id, :name %> <br>
  <%= f.submit %>
<% end %>