<div class="flex h-screen">
    <%= render partial: "shared/navbar", locals: {current_page: 'asset_index'} %>
  <div class="bg-slate-200 w-5/6 p-5">
    <div class="grid gap-2 xl:grid-cols-5 md:grid-cols-3 grid-cols-1">
      <% @business_assets.each do |business_asset| %>
        <div class="p-4 rounded-xl shadow-lg bg-white">
          <a href="<%= business_asset_path(business_asset) %>" class="text-lg text-slate-500 pb-2 hover:text-slate-400"> <%= business_asset.name %> </a>
          <p class="text-slate-400"> <%= business_asset.cost_type %> </p>
          <p class="text-slate-400"> <%= business_asset.cost %> </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
