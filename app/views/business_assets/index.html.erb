<div class="flex h-screen">
  <div class="bg-slate-500 xl:w-1/6 lg:w-1/4 md:w-1/3 w-1/2 lg:p-10 p-5">
    <h1 class="flex w-full text-4xl font-serif italic text-white justify-center pb-2"> Asset Manager </h1>
    <p class="flex py-3">
      <a href='#' class='btn rounded w-full border-2 border-slate-600 bg-slate-400 text-slate-900 py-3 md:px-4 px-2 hover:bg-slate-300 active:bg-slate-200 focus:bg-slate-200'>Companies</a>
    </p>
    <p class="flex py-3">
      <a href='#' class='btn rounded w-full border-2 border-slate-600 bg-slate-400 text-slate-900 py-3 md:px-4 px-2 hover:bg-slate-300 active:bg-slate-200 focus:bg-slate-200'>Employees</a>
    </p>
    <p class="flex py-3">
      <a href='#' class='btn rounded w-full border-2 border-slate-600 bg-slate-400 text-slate-900 py-3 md:px-4 px-2 hover:bg-slate-300 active:bg-slate-200 focus:bg-slate-200'>Host Types</a>
    </p>
    <p class="flex py-3">
      <a href='#' class='btn rounded w-full border-2 border-slate-600 bg-slate-400 text-slate-900 py-3 md:px-4 px-2 hover:bg-slate-300 active:bg-slate-200 focus:bg-slate-200'>Info Types</a>
    </p>
  </div>
  <div class="bg-slate-300 xl:w-5/6 lg:w-3/4 md:w-2/3 w-1/2 p-5">
    <div class="grid gap-2 xl:grid-cols-5 md:grid-cols-3 grid-cols-1">
    <% @business_assets.each do |business_asset| %>
      <div class="p-4 border-2 border-slate-400 rounded bg-slate-200">
        <a href="<%= edit_business_asset_path(business_asset) %>" class="text-lg text-slate-800 pb-2 hover:text-slate-600"> <%= business_asset.name %> </a>
        <p class="text-slate-700"> <%= business_asset.cost_type %> </p>
        <p class="text-slate-700"> <%= business_asset.cost %> </p>
      </div>
    <% end %>
    </div>
  </div>
</div>
