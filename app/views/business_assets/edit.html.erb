<%= form_for @business_asset do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %> <br>
  <%= f.label :asset_code, "Asset Code:" %>
  <%= f.text_field :asset_code %> <br>
  <%= f.label :cost, "Cost:" %>
  <%= f.number_field :cost %> <br>
  <%= f.label :cost_type, "Cost Type:" %>
  <%= f.select :cost_type, ["Monthly", "Yearly"] %> <br>
  <%= f.label :admin, "Admin:" %>
  <%= f.collection_select :admin_id, Admin.all, :id, :name %> <br>
  <%= f.label :host_type_id, "Host Type:" %>
  <%= f.collection_select :host_type_id, HostType.all, :id, :description %> <br>
  <%= f.label :info_type_id, "Info Type:" %>
  <%= f.collection_select :info_type_id, InfoType.all, :id, :name %> <br>
  <%= f.label :priority_id, "Priority:" %>
  <%= f.collection_select :priority_id, Priority.all, :id, :description %> <br>
  <%= f.submit %>
<% end %>